# Google Calendar Integration
# Get credentials from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CREDENTIALS_JSON='{"installed":{"client_id":"YOUR_CLIENT_ID.apps.googleusercontent.com","project_id":"YOUR_PROJECT","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_secret":"YOUR_CLIENT_SECRET","redirect_uris":["http://localhost"]}}'

# Token obtained via OAuth flow (see TOKEN_RENEWAL.md)
GOOGLE_TOKEN_JSON='{"access_token":"YOUR_ACCESS_TOKEN","refresh_token":"YOUR_REFRESH_TOKEN","scope":"https://www.googleapis.com/auth/calendar","token_type":"Bearer","expiry_date":"TIMESTAMP"}'

GOOGLE_CALENDAR_ID="primary"

